<%= form_tag(movies_path, method: "get") do %>
  <div>
    <%= label_tag(:title, "Title:") %>
    <%= text_field_tag(:title) %>
  </div>
  <div>
    <%= label_tag(:director, "Director:") %>
    <%= text_field_tag(:director) %>
  </div>
  <div>
    <%= label_tag(:duration, "Duration:") %>
    <%= select_tag "duration", options_for_select(["Under 90 minutes", "Between 90 and 120 minutes", "Over 120 minutes"], "Under 90 minutes") %>
  </div>
  <div><%= submit_tag("Search") %></div>
<% end %>